@model Laboration2_Uppgift2.Models.TicTacToe
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TicTacToe</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-push-4">
                <form action="Game/TicTacToe" method="post">
                    @for (int i = 1, x = 1; i < 4; i++)
                    {
                        <div class="row">
                            @for (int j = 1; j < 4; j++, x++)
                            {
                                var value = "";
                                var active = "";
                                var box = Model.BoxList.FirstOrDefault(b => b.BoxCoordinate == x);
                                if (box.BoxCoordinate > 0)
                                {
                                    value = box.Value.ToString();
                                    active = "disabled";
                                }
                                <input type="button" name="@i" class="col-md-4" value="@value" @active/>
                            }
                        </div>
                    }
                </form>
            </div>
        </div>
        @*@Model.Players[0]
            @Model.BoxList[1].Value*@
    </div>
</body>
</html>
